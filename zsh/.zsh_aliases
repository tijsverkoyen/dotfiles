# improve LS
# -a    include directories starting with a dot
# -h    make the sizes human readable
# -l    list in long format
# -G    colors++
alias ls="ls -ahlG"

# simplify upgrading our system
alias upgrade="omz update; brew update && brew upgrade && brew cleanup"

# simplify using the Symfony CLI
alias s="symfony"
alias comp="symfony php -d memory_limit=-1 COMPOSER_MEMORY_LIMIT=-1 composer"
alias comp1="symfony php -d memory_limit=-1 ~/composer/composer1.phar"

# make it easier to deploy with deployer
alias dep="symfony php vendor/bin/dep"

# tijs command
alias tijs="$(brew --prefix php@8.3)/bin/php ~/Sites/tijs/command/bin/console --env=prod"

# pstorm, as I can't get used to that stupid phpstorm cli thing
alias pstorm="open -na 'PhpStorm.app' --args "

# pycharm, as I can't get used to the command line launcher
alias pycharm="open -na "PyCharm.app" --args "