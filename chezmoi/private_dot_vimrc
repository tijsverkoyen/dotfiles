" Turn on syntax highlighting.
syntax on

" Set tab to 2 spaces
set tabstop=2

" Replace tabcharachter with spaces
set expandtab

" Show linenumbers
set number

" Set status line display
set statusline=%F%m%r%h%w\ [FORMAT=%{&ff}]\ [TYPE=%Y]\ [POS=%l,%v][%p%%]\ [BUFFER=%n]\ %{strftime('%c')}

" Encoding
set encoding=utf-8
